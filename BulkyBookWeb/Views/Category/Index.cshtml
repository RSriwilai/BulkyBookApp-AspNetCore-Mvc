@using BulkyBook.DataAccess.DatabaseModel
@model List<Category>

@{
    ViewData["Title"] = "Index";
}

<br />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-secondary bi bi-plus-square float-end"> Create Category</a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%;">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td width="50%">
                        @i.Name
                    </td>
                    <td width="30%">
                        @i.DisplayOrder
                    </td>
                    <td style="text-align:center">
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary" style="margin-right:10px;" asp-controller="Category" asp-action="EditCategory" asp-route-id="@i.Id">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@i.Id">
                                <i class="bi bi-x-square"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
