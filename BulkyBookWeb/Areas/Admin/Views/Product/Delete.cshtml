@model BulkyBook.Models.DatabaseModel.Product
@{
    ViewData["Title"] = "Delete";
}
<form method="post" asp-action="DeleteProduct">
    <input asp-for="ProductId" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Are you sure that you want to delete this Product?</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="ISBN">ISBN</label>
            <input asp-for="ISBN" class="form-control" disabled/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px"> <i class="bi bi-x-square"></i> Delete</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary" style="width: 150px"> <i class="bi bi-box-arrow-in-left"></i> Back to List</a>
    </div>
</form>