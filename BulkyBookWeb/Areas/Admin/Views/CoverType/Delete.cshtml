@model BulkyBook.Models.DatabaseModel.CoverType
@{
    ViewData["Title"] = "Edit";
}
<form method="post" asp-action="DeleteCoverType">
    <input asp-for="CoverTypeId" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Are you sure that you want to delete this Cover Type?</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px"> <i class="bi bi-x-square"></i> Delete</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-outline-secondary" style="width: 150px"> <i class="bi bi-box-arrow-in-left"></i> Back to List</a>
    </div>
</form>